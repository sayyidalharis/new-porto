<script>
  const aboutSection = document.querySelector('#about');
  const skillsSection = document.querySelector('.skills-content');
  const experienceItems = document.querySelectorAll('.experience-item');
  const technicalSkills = document.querySelector('.technical-skills');
  const languageSkills = document.querySelector('.language-skills');
  // get skill header
  const skillHeader = document.querySelector('.section-header');

  function isInViewport(element) {
    const rect = element.getBoundingClientRect();
    return (
      rect.top >= 0 &&
      rect.bottom <= (window.innerHeight || document.documentElement.clientHeight)
    );
  }

  function fadeInItems() {
    experienceItems.forEach((item, index) => {
      if (isInViewport(item) && !item.classList.contains('fade-in')) {
        setTimeout(() => {
          item.classList.add('fade-in');
        }, index * 400); // Adjust the interval (milliseconds) between each item appearance
      }
    });
  }

  function handleScroll() {
    if (isInViewport(aboutSection) && !aboutSection.classList.contains('fade-in')) {
      aboutSection.classList.add('fade-in');
    }

    // for skill
    if (isInViewport(skillsSection) && !technicalSkills.classList.contains('fade-in')) {
      skillHeader.classList.add('fade-in');
      setTimeout(() => {
        technicalSkills.classList.add('fade-in');    
        setTimeout(() => {
          languageSkills.classList.add('fade-in');
        }, 400);  
      }, 400);
      //add timeout than fade in the language skill
    }

    fadeInItems();
  }

  window.addEventListener('scroll', handleScroll);
</script>

